<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Location</th>
      <th>Details</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% buyers.forEach(function(m) { %>
      <tr>
        <td><%= m.fullName %></td>
        <td><%= m.location %></td>
        <td><a href="/buyers/<%= m._id %>">DETAILS</a></td>

        <td>
          <form action="/buyers/<%= m.id %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
          </form>
        </td>

        <td>
          <a href="/buyers/<%= m.id %>/edit">Edit</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
