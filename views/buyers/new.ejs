<%- include('../partials/header') %>

<form id="new-form" action="/buyers" method="POST">
  <label>Full Name:</label>
  <input type="text" name="fullName">
  <label>Location:</label>
  <input type="text" name="location">
  <label>Price Range:</label>
  <select name="prRange">
    <option value="$200,000-$399,999">$200,000-$399,999</option>
    <option value="$400,000-$599,999">$400,000-$599,999</option>
    <option value="$600,000-$999,999">$600,000-$999,999</option>
    <option value="$1,000,000+">$1,000,000+</option>
  </select>
  <label>View within Month:</label>
  <input type="checkbox" name="viewNow" checked>
  <input type="submit" value="Add buyer">
</form>

<%- include('../partials/footer') %>
